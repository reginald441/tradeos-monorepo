# =============================================================================
# TradeOS Environment Configuration Template
# Copy this file to .env and fill in your actual values
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=TradeOS
APP_ENV=production
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=tradeos
POSTGRES_PASSWORD=change_this_secure_password_in_production
POSTGRES_DB=tradeos
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://tradeos:change_this_secure_password_in_production@postgres:5432/tradeos
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password_in_production
REDIS_URL=redis://:change_this_redis_password_in_production@redis:6379/0
REDIS_CACHE_URL=redis://:change_this_redis_password_in_production@redis:6379/1

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# CORS Origins (comma-separated)
CORS_ORIGINS=https://localhost,https://tradeos.local,https://app.tradeos.io

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# Binance API
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET=true

# Alpaca API
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_API_SECRET=your_alpaca_api_secret
ALPACA_PAPER=true

# Interactive Brokers
IB_GATEWAY_HOST=localhost
IB_GATEWAY_PORT=4002
IB_CLIENT_ID=1

# Polygon.io (for market data)
POLYGON_API_KEY=your_polygon_api_key

# Alpha Vantage
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/tradeos.log

# =============================================================================
# MONITORING & METRICS
# =============================================================================
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_this_grafana_password
GRAFANA_ROOT_URL=http://localhost:3000

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# =============================================================================
# TRADING SETTINGS
# =============================================================================
DEFAULT_COMMISSION_RATE=0.001
MAX_POSITION_SIZE_PERCENT=10
RISK_PER_TRADE_PERCENT=2
ENABLE_PAPER_TRADING=true

# =============================================================================
# DOCKER COMPOSE SETTINGS
# =============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=80
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Service Replicas
BACKEND_REPLICAS=2
FRONTEND_REPLICAS=2
CELERY_WORKERS=2

# =============================================================================
# SSL/TLS CERTIFICATES
# =============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/tradeos.crt
SSL_KEY_PATH=/etc/nginx/ssl/tradeos.key
SSL_CA_PATH=/etc/nginx/ssl/ca.crt

# Let's Encrypt
LETSENCRYPT_EMAIL=admin@tradeos.io
LETSENCRYPT_DOMAIN=tradeos.io

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=tradeos-backups
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_WEBSOCKET=true
ENABLE_REAL_TIME_DATA=true
ENABLE_SOCIAL_TRADING=false
ENABLE_AI_INSIGHTS=false
