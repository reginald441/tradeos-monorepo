# TradeOS Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=TradeOS
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-API-Key,X-Request-ID

# =============================================================================
# Database Settings
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tradeos
DB_USER=tradeos_user
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_ECHO=false

# =============================================================================
# Redis Settings
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_MAX_CONNECTIONS=50

# =============================================================================
# JWT Settings
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Security Settings
# =============================================================================
SECURITY_PASSWORD_MIN_LENGTH=8
SECURITY_BCRYPT_ROUNDS=12
SECURITY_API_KEY_PREFIX=trd_
SECURITY_MAX_LOGIN_ATTEMPTS=5
SECURITY_LOCKOUT_DURATION_MINUTES=30

# =============================================================================
# Exchange API Settings
# =============================================================================
EXCHANGE_BINANCE_API_KEY=
EXCHANGE_BINANCE_SECRET_KEY=
EXCHANGE_BINANCE_TESTNET=true

EXCHANGE_COINBASE_API_KEY=
EXCHANGE_COINBASE_SECRET_KEY=
EXCHANGE_COINBASE_PASSPHRASE=

EXCHANGE_KRAKEN_API_KEY=
EXCHANGE_KRAKEN_SECRET_KEY=

EXCHANGE_RATE_LIMIT_REQUESTS_PER_SECOND=10
EXCHANGE_RATE_LIMIT_BURST=20

# =============================================================================
# Logging Settings
# =============================================================================
LOG_LEVEL=INFO
LOG_JSON_FORMAT=true
LOG_FILE_PATH=
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# Rate Limiting Settings
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_LIMIT=100
RATE_LIMIT_DEFAULT_WINDOW=60
RATE_LIMIT_AUTHENTICATED_LIMIT=1000
RATE_LIMIT_AUTH_LIMIT=10
RATE_LIMIT_TRADE_LIMIT=50
RATE_LIMIT_MARKET_DATA_LIMIT=200

# =============================================================================
# Stripe Settings (for subscriptions)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

STRIPE_FREE_TIER_PRICE_ID=
STRIPE_PRO_TIER_PRICE_ID=
STRIPE_ENTERPRISE_TIER_PRICE_ID=
